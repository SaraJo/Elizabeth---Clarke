script(type="text/javascript", src="/javascripts/mylibs/jquery.colorbox-min.js")
script
 $(document).ready(function() {
  $('.modallink').colorbox({
   inline: true,
    transition: 'fade',
    speed: 300,
    opacity: .8,
   });
  });
script(type="text/javascript", src="/javascripts/mylibs/jquery.easytabs.min.js")
script
 $('#tab-container').easytabs({ updateHash:false });
 $('#next1').click( function() {
 $('#tab-container').easytabs('select', '#tabs-shipping');
  });
 $('#next2').click( function() {
 $('#tab-container').easytabs('select', '#tabs-payment');
 });
 $("#thankslink").colorbox({href:"thanks.html", width: 500});